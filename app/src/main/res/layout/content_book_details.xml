<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/k2ec7b3bda4cbecee9d752ce32d1755f7_searchlibrarycatalogpicuresofbooks_353308"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.keshavjoshi.nss_library.book_details"
    tools:showIn="@layout/activity_book_details">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Status:"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:id="@+id/status"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/medium"
        android:layout_alignLeft="@+id/medium"
        android:layout_alignStart="@+id/medium"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/name1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/medium"
        android:layout_toEndOf="@+id/medium"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:text="Issue This Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_toEndOf="@+id/code"
        android:layout_marginTop="26dp"
        android:id="@+id/issue"
        android:layout_alignLeft="@+id/status"
        android:layout_alignStart="@+id/status"
        android:background="@android:drawable/bottom_bar" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/code"
        android:layout_alignLeft="@+id/name1"
        android:layout_alignStart="@+id/name1"
        android:id="@+id/code1"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/medium"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:id="@+id/medium1"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status"
        android:id="@+id/status1"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:text="Medium:"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:id="@+id/medium"
        android:layout_marginTop="13dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/code"
        android:layout_alignLeft="@+id/code"
        android:layout_alignStart="@+id/code"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Code:"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:id="@+id/code"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>
